  <div class="container">
    <div class="heading">
        <p><%= formattedDate %></p>
      </div>
  </div>
  <br>
  <br>
  <% for( let index = 0; index < i; index++ ) { %>
    <div class="container">
        <div class="listitems">
            <div><input type="checkbox" name="option" class="checkbox"> 
                <div><p class="text"><%= data[index] %></p></div></div>
        </div>
    </div>
    <br>
<% } %>
  <div class="container">
    <div class="additems">
        <form class="item" action=<%= mode %> method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="Monday," august="" 21="">+</button>
          </form>
    </div>
  </div>

  <!-- Your website content goes here -->
  <script>
    const sourceElement = document.querySelector('.heading');
    const sourceWidth = sourceElement.offsetWidth;
    const targetElement = document.querySelector('.additems');
    targetElement.style.width = `${sourceWidth}px`;
    for (let index = 0; index < document.querySelectorAll('.listitems').length; index++) {
        const targetElement = document.querySelectorAll('.listitems')[index];
        targetElement.style.width = `${sourceWidth}px`;
        const checkbox = document.querySelectorAll('.checkbox')[index];
        const text = document.querySelectorAll('.text')[index];

checkbox.addEventListener('change', function() {
  if (this.checked) {
    text.classList.add('crossed-out');
  } else {
    text.classList.remove('crossed-out');
  }
});

    }
</script>
</body>
</html>
